grammar RhythmGrammar
	
	rule duration
		'-'? (
			multiplier:positive_int? metrical_duration:[WwHhQqEeSsRrXx] modifier 
			/ 
			bang_duration:positive_number '' # for some reason, needs multiple tokens to assign a label
		)
	end

	rule modifier
		't'? '.'*
	end
	
	rule positive_number
		positive_float / positive_int
	end
	
	rule positive_float
		[0-9]+ '.' [0-9]+
	end
	
	rule positive_int
		[0-9]+
	end

end